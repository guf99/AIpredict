{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/polymarket",
      "dest": "/api/polymarket.js"
    },
    {
      "src": "/api/kalshi",
      "dest": "/api/kalshi.js"
    },
    {
      "src": "/api/predictions",
      "dest": "/api/predictions.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
